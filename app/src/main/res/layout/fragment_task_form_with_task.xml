<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kentarok.android.palimpsest.fragments.TaskFormFragment"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/task_form_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/task_form_label_title"
            />

        <EditText
            android:id="@+id/task_form_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/task_form_label_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/task_form_label_count"
            />

        <EditText
            android:id="@+id/task_form_edit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/task_form_button_submit_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_form_button_submit_update"
                />

            <Button
                android:id="@+id/task_form_button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_form_button_submit_delete"
                />
            </LinearLayout>
    </LinearLayout>
</FrameLayout>
